{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "types": ["vite/client", "chrome", "firefox-webext-browser"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@robin-pm-staking/common/*": ["../common/src/*"]
        }
    },
    "include": ["src", "vite.config.ts"]
}

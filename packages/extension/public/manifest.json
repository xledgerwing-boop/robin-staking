{
    "manifest_version": 3,
    "name": "Robin Staking BETA",
    "version": "0.1.1",
    "description": "THIS EXTENSION IS FOR BETA TESTING. Adds a staking UI under Polymarket's trading interface to interact with Robin's Staking Vaults.",
    "content_scripts": [
        {
            "matches": ["https://polymarket.com/*", "https://*.polymarket.com/*"],
            "js": ["assets/content.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["assets/inpage.js", "assets/inpage.css", "assets/ccip.js", "assets/p256.js", "logo.png"],
            "matches": ["https://polymarket.com/*", "https://*.polymarket.com/*"]
        }
    ],
    "icons": {
        "48": "logo48.png",
        "128": "logo128.png"
    }
}
